<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:inner_parallax_factor="2.5"
        app:parallax_factor="2.5"
        app:parallax_views_num="4"
        android:scrollbars="none"
        tools:context=".MainActivity" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:isScrollContainer="true">
            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:id="@+id/shopping"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="taskSelectShopping"

                android:isScrollContainer="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/a2"
                    android:tint="#aaffffff"
                    />

                <LinearLayout
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp"
                    android:backgroundTint="#00555555"
                    >

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/listitem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOPPING"
                        android:textSize="30sp"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="left"
                        android:textColor="#ffffff"

                        />
                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="₹1.75/- min &#038; ₹10/- km"
                        android:textColor="#ffffff"
                        android:typeface="serif"
                        android:layout_gravity="left"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/grocery"
                android:layout_margin="8dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="taskSelectGrocery"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/a1"
                    android:tint="#aaffffff"
                    />

                <LinearLayout
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp" android:backgroundTint="#00555555"
                    >

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/listitem_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GROCERY"
                        android:textSize="30sp"
                        android:layout_marginTop="75dp"
                        android:layout_gravity="left"
                        android:textColor="#ffffff"

                        />
                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/item_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="₹1.75/- min &#038; ₹10/- km"
                        android:textColor="#ffffff"

                        android:layout_gravity="left"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="8dp"
                android:id="@+id/pickupanddelivery"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="taskSelectPickupndelivery"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/a4"
                    android:tint="#aaffffff"
                    />

                <LinearLayout
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp" android:backgroundTint="#00555555"
                    >

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/listitem_name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PICK UP N DELIVER"
                        android:textSize="30sp"
                        android:layout_marginTop="75dp"
                        android:layout_gravity="left"
                        android:textColor="#ffffff"

                        />
                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/item_price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="₹1.75/- min &#038; ₹10/- km"

                        android:textColor="#ffffff"
                        android:layout_gravity="left"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="8dp"
                android:id="@+id/waitfordelivery"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="taskSelectWaitfordelivery"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/a3"
                    android:tint="#aaffffff"
                    />
                <LinearLayout
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp" android:backgroundTint="#00555555"
                    >

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/listitem_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WAIT FOR DELIVERY"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="75dp"
                        android:layout_gravity="left"

                        />
                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:id="@+id/item_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:text="₹1.75/- min &#038; ₹10/- km"

                        android:layout_gravity="left"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </com.nirhart.parallaxscroll.views.ParallaxScrollView>

</FrameLayout>


