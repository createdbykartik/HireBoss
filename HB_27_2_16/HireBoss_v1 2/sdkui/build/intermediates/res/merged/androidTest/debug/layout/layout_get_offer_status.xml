<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.hireboss.android.roachlabs.Util.TextViewWithFont
            android:id="@+id/offer_status_text_view_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Enter your offer details"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_status_text_view_header"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_offer_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="offer key"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edit_text_offer_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Offer Amount"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_offer_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CC"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_offer_bank_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="CC"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_offer_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Valid Card Number"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_offer_name_on_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Name of card"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_offer_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text=" "
                    android:hint="Phone number"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />
                <EditText
                    android:id="@+id/edit_text_offer_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text=" "
                    android:hint="Email"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>