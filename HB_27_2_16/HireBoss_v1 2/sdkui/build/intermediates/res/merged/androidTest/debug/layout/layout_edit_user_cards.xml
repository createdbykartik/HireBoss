<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.hireboss.android.roachlabs.Util.TextViewWithFont
            android:id="@+id/text_view_edit_card_info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Select Card To Edit"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_edit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_edit_card_info_header"
            android:layout_margin="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_edit_card"
            android:layout_margin="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:text="Card Number" />

                    <EditText
                        android:id="@+id/edit_text_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:hint="Card Number"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:text="Card Holder Name" />

                    <EditText
                        android:id="@+id/edit_text_card_holder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:hint="Card Holder Name"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:text="Expiry Month" />

                    <EditText
                        android:id="@+id/edit_text_expiry_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:hint="Expiry Month"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:text="Expiry Year" />

                    <EditText
                        android:id="@+id/edit_text_expiry_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:hint="Expiry Year"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.hireboss.android.roachlabs.Util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:text="Card Name" />

                    <EditText
                        android:id="@+id/edit_text_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:hint="Card Name"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>