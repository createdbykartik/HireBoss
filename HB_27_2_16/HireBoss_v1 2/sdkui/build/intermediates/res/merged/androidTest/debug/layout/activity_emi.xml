<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.payuResponse.testapp.EmiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".70"
            android:orientation="vertical"
            android:gravity="center">

            <com.hireboss.android.roachlabs.Util.TextViewWithFont
                android:id="@+id/text_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold" />

            <com.hireboss.android.roachlabs.Util.TextViewWithFont
                android:id="@+id/text_view_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction id : " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_emi_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_emi_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_text_emi_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Number"
                        android:inputType="number"
                        android:maxLength="19" />

                    <EditText
                        android:id="@+id/edit_text_emi_name_on_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name on card"
                        android:maxLength="19" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText

                            android:id="@+id/edit_text_emi_expiry_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="MM"
                            android:inputType="number"
                            android:maxLength="2" />

                        <EditText
                            android:id="@+id/edit_text_emi_expiry_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="YYYY"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_text_emi_cvv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="CVV"
                            android:inputType="number"
                            android:maxLength="4" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_emi_pay_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emi Pay Now" />
        </LinearLayout>

        <include
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/footer_image"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</LinearLayout>
