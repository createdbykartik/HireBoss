<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.hireboss.android.roachlabs.Util.TextViewWithFont
            android:id="@+id/text_view_delete_card_info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Select Card To Delete"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/list_view_delete_user_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_delete_card_info_header"
            android:layout_margin="10dp"
            android:choiceMode="singleChoice" />

    </RelativeLayout>
</RelativeLayout>