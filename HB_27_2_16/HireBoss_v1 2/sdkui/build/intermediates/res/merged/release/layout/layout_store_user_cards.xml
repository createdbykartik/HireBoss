<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.hireboss.android.roachlabs.Util.TextViewWithFont
            android:id="@+id/text_view_store_card_info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Enter your card details"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_store_card_info_header"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_card_holder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Card Holder Name"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Card Name"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_expiry_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Expiry Month"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_expiry_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="Expiry Year"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_text_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="CVV"
                    android:imeOptions="flagNoExtractUi"
                    android:singleLine="true" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>